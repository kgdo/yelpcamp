<% layout("layouts/boilerplate")%>
<div class="container justify-content-center align-items-center mt-5 mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 padding-3"> 
      <div class="card shadow">
        <img src="https://res.cloudinary.com/kendo/image/upload/v1639071555/YelpCamp/yzdgyfblbxa8f95tvzfe.jpg" alt="" class="card-img-top"/>
        <div class="card-body">
          <h5 class="card-title">Log In</h5>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                autofocus
                required
              />
              <div class="valid-feedback">Hey Buddy;o) Looks Good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password "
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Hey Buddy;o) Looks Good!</div>
            </div>
            <button class="btn btn-success btn-block">Log In</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>



